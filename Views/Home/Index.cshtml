@{
    ViewData["Title"] = "Home Page";
    int data = 150;
    int leng = 0;
}

<div class="container">
    <div class="row">
        @for (int i = 0; i < data; i++)
        {
            @if (i % 2 != 0)
            {
                <div class="col-md-2">
                    <p>@i</p>
                </div>
                leng++;
            }
        }
    </div>
</div>

<label>Nombre total de nombre impair trouver : @leng</label>
